# Environment Configuration Template
# Copy this file to .env and fill in your specific values
# DO NOT commit .env to version control (should be in .gitignore)

# Project Configuration
PROJECT_NAME=CPE312-Traffic-Capstone
PROJECT_ENV=development

# Data Paths
DATA_RAW_PATH=./02_Data/Raw
DATA_PROCESSED_PATH=./02_Data/Processed
DATA_EXTERNAL_PATH=./02_Data/External
MODELS_PATH=./05_Models
RESULTS_PATH=./06_Results
NOTEBOOKS_PATH=./03_Notebooks

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/project.log

# Jupyter Configuration
JUPYTER_ENABLE_LAB=yes

# API Keys (Leave blank if not using)
# Weather API
WEATHER_API_KEY=

# Google Maps API
GOOGLE_MAPS_API_KEY=

# TomTom API
TOMTOM_API_KEY=

# Database Configuration (if using database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=traffic_capstone
# DB_USER=postgres
# DB_PASSWORD=

# Cloud Storage (Optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_BUCKET_NAME=

# GCP Configuration (Optional)
# GCP_PROJECT_ID=
# GCP_BUCKET_NAME=

# Model Configuration
MODEL_RANDOM_SEED=42
TEST_SIZE=0.2
VALIDATION_SIZE=0.2

# Performance Configuration
NUM_WORKERS=4
BATCH_SIZE=32
EPOCHS=100

# Feature Configuration
NORMALIZE_FEATURES=true
ENCODE_CATEGORICAL=true

# Visualization Configuration
PLOT_STYLE=seaborn-v0_8-darkgrid
FIGURE_DPI=100
SAVE_FIGURES=true

# Debug Mode
DEBUG=false
VERBOSE=true
